# =============================================================================
# Environment Variables Template
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Azure AI Content Understanding
# -----------------------------------------------------------------------------
CONTENTUNDERSTANDING_ENDPOINT=https://your-resource.services.ai.azure.com/
CONTENTUNDERSTANDING_KEY=

# -----------------------------------------------------------------------------
# Azure AI Search
# -----------------------------------------------------------------------------
SEARCH_ENDPOINT=https://your-search.search.windows.net
SEARCH_API_KEY=
SEARCH_INDEX_BASELINE=baseline-index
SEARCH_INDEX_ENHANCED=enhanced-index

# -----------------------------------------------------------------------------
# Azure Storage
# Preferred: set STORAGE_ACCOUNT_URL for DefaultAzureCredential (Entra ID)
# Fallback: set AZURE_STORAGE_CONNECTION_STRING for key-based auth
# -----------------------------------------------------------------------------
STORAGE_ACCOUNT_URL=https://your-account.blob.core.windows.net
AZURE_STORAGE_CONNECTION_STRING=
STORAGE_CONTAINER_CORPUS=corpus
STORAGE_CONTAINER_RESULTS=cu-results

# -----------------------------------------------------------------------------
# Azure OpenAI (embeddings + chat completions)
# -----------------------------------------------------------------------------
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_KEY=
EMBEDDING_DEPLOYMENT=text-embedding-3-small
CHAT_DEPLOYMENT=gpt-4o

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=DEBUG
